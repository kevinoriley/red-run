{
  "mcpServers": {
    "skill-router": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "tools/skill-router",
        "python",
        "server.py"
      ],
      "env": {
        "HF_HUB_OFFLINE": "1"
      }
    },
    "nmap-server": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "tools/nmap-server",
        "python",
        "server.py"
      ]
    },
    "shell-server": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "tools/shell-server",
        "python",
        "server.py"
      ]
    }
  }
}
